---
import { Image } from "astro:assets";
const { clientes } = Astro.props;
---



<div class="mainBox">

  <!-- caja principal -->
  <div class="galleryBox">
    { clientes.map(({ src, alt, link }) => (
      <a href={link} target="_blank" rel="noopener noreferrer" class="logo_box">
        <Image src={src} alt={alt} />
      </a>
    ))}
      
  </div>
